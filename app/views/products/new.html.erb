<h1>New Product</h1>

<%= form_for :product, url: products_path do |f| %>
  <p>
    <%= f.label :id %><br>
    <%= f.text_field :id %>
  </p>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>