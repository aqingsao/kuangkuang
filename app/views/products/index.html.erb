<h1>Listing products</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= link_to "View Detail", product_path(product.id) %></td>
    </tr>
  <% end %>
</table>
